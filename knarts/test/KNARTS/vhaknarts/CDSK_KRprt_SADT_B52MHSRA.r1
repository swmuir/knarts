                            <simpleAction xsi:type="CollectInformationAction">
                                <documentationConcept>
                                    <prompt value="Additional Information"/>
                                    <responseDataType value="String"/>
                                </documentationConcept>
                            </simpleAction>
                        </subElements>
                    </actionGroup>
                    <actionGroup>
                        <!-- Condition: The answer to question 3, question 4, question 5, and question 6b are all “No,” Then display this section prompt -->
                        <behaviors>
                            <behavior xsi:type="GroupSelectionBehavior" value="Any"/>
                        </behaviors>
                        <conditions>
                            <condition>
                                <logic xsi:type="elm:Not">
                                    <elm:operand xsi:type="elm:AnyTrue">
                                        <elm:source xsi:type="elm:List">
                                            <elm:element xsi:type="elm:Property" path="beenThinkingAboutHow">
                                                <elm:source xsi:type="elm:ParameterRef" name="Responses"/>
                                            </elm:element>
                                            <elm:element xsi:type="elm:Property" path="intentionOfActing">
                                                <elm:source xsi:type="elm:ParameterRef" name="Responses"/>
                                            </elm:element>
                                            <elm:element xsi:type="elm:Property" path="hadThoughtsAndHadSomeIntentionOfActing">
                                                <elm:source xsi:type="elm:ParameterRef" name="Responses"/>
                                            </elm:element>
                                            <elm:element xsi:type="elm:Property" path="preparedToEndLifeInPast3Months">
                                                <elm:source xsi:type="elm:ParameterRef" name="Responses"/>
                                            </elm:element>
                                        </elm:source>
                                    </elm:operand>
                                </logic>
                                <conditionRole/>
                            </condition>
                        </conditions>
                        <title value="This screen has resulted in a negative result on the C-SSRS."/>
                        <subElements>
