                                    <prompt value="Acknowledge"/>
                                    <responseDataType value="Boolean"/>
                                </documentationConcept>
                            </simpleAction>
                        </subElements>
                    </actionGroup>
                    <actionGroup>
                        <!-- Condition on negative screen -->
                        <conditions>
