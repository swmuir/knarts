                                <behaviors>
                                    <behavior xsi:type="ReadOnlyBehavior" value="true"/>
                                </behaviors>
                                <documentationConcept>
                                    <prompt value="PHQ-plus result: indicate if negative or positive screen for depressive symptoms"/>
