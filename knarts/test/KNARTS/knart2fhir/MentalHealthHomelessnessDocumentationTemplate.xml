    <name value="Mental Health: Homelessness Documentation Template"/>
    <title value="Mental Health: Homelessness Documentation Template"/>
    <type>
      <coding>
        <code value="Documentation Template"/>
      </coding>
    </type>
    <status value="draft"/>
    <description value="The intent of the “Homelessness Documentation Template” is to support decision-making and documentation related to annual homelessness and food insecurity screening for Veterans, and to promote appropriate ordering based on patient-specific risk factors and preferences."/>
    <useContext>
      <code>
        <code value="TargetUser"/>
        <display value="Mental Health Providers; Primary Care Providers (PCPs)"/>
      </code>
    </useContext>
